---
import '@/styles/global.css';

import { ViewTransitions } from 'astro:transitions';
import BasicScripts from './BasicScripts.astro';
import BasicHead, { type Props as BasicHeadProps } from './BasicHead.astro';

interface Props {
	i18n?: {
		language: string;
		direction: 'ltr' | 'rtl' | 'auto';
	};
	metadata: BasicHeadProps;
}

const { metadata, i18n = { language: 'en', direction: 'ltr' } } = Astro.props;
---


<html lang={i18n.language} dir={i18n.direction}>
	<head>
		<!-- <CommonMeta />
		<Favicons />
		<SiteVerification />
		<Analytics /> -->
		<BasicHead title={metadata.title} description={metadata.description} />

		<!-- Comment the line below to disable View Transitions -->
		<ViewTransitions fallback="swap" />
	</head>

	<body class="h-screen">
		<slot />

		<BasicScripts />
		<style is:global>
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
